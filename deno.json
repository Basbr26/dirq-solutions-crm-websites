{
  "nodeModulesDir": "auto",
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".vite",
    "coverage",
    "supabase/functions"
  ],
  "lint": {
    "exclude": [
      "node_modules",
      "dist",
      "build",
      ".vite",
      "coverage",
      "supabase/functions"
    ],
    "rules": {
      "tags": ["recommended"],
      "exclude": [
        "no-unused-vars",
        "no-explicit-any",
        "no-window",
        "no-window-prefix"
      ]
    }
  },
  "fmt": {
    "exclude": [
      "node_modules",
      "dist",
      "build"
    ],
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
